<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title -Shauli Blog Site</title>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css"> <!--three lines linking to jquery library for facebook like-->
    <script src="//code.jquery.com/jquery-1.10.2.js"></script>
    <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/bootstrap")

    @using (Html.BeginForm("Shared", "Scripts"))
    {
        @Html.Partial("~/Views/Shared/Scripts.cshtml");
    }
</head>
<body>
    @Html.Partial("NavBar", "Shared")
    <header>
        <h1>Final Project - Shauli's Blog</h1>
    </header>
    @Html.Partial("Intro", "Shared")
    <div id="content">
        <div id="mainContent">
            @RenderBody()
            <!--Calling Render here will insert the Select Page content with the Layout-->
        </div>
        @Html.Partial("Aside", "Shared")
    </div>
    <footer>
        @Html.Partial("Footer", "Shared")
        <!--<audio controls autoplay>
        <!--Audio is hidden in CSS-->
        <!--<source src="~/Music/cheerleader.ogg" type="audio/ogg">
            <source src="~/Music/cheerleader.mp3" type="audio/mpeg">
        </audio>-->
    </footer>
</body>
</html>
